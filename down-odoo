#!/bin/bash
# stop and remove all instances
###############################################

#Include file lib in same dir as this file
. $(dirname $0)"/lib"

if [ "$#" -ne 1 ] ; then
    msgerror "must have an argument"
fi

CLIENT=$1

msgrun "\n Stopping odoo v8 adhoc for ${CLIENT}"
exit 0
sudo docker stop db-odoo
sudo docker stop aeroo_docs
sudo docker stop ${CLIENT}

sudo docker rm db-odoo
sudo docker rm aeroo_docs
sudo docker rm ${CLIENT}
