#!/bin/bash
###############################################
#Include file lib in same dir as this file
. $(dirname $0)"/lib"

msgrun "Status of this repo"
git status

msgrun "Pulling scripts odoo v8 adhoc"
git pull

msgrun "Installing scripts odoo v8 adhoc"
cp sd /usr/bin
cp odooenv /usr/bin
cp lib /usr/bin
cp developer /usr/bin
cp sites-available-PS01 /etc/nginx/sites-available/

msgdone "Scripts installed"