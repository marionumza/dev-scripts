# Start session on docker container
###############################################
echo 'Entering session mode on odoo v7 container'
sudo docker run -d \
    --name db  \
    -e POSTGRES_PASSWORD=odoo \
    -e POSTGRES_USER=odoo \
    -v /home/ubuntu/70/data:/var/lib/postgresql/data \
    postgres:9.3.6

sudo docker run --rm -it -p 80:8069 \
    --name odoo \
    --link db:db \
    --entrypoint=/bin/bash \
    -v /home/ubuntu/70/filestore:/home/odoo \
    jobiols/odoo:70
